        <h2 class="bigTitle"><a href="#">NOW - Breaking Gaming News</a></h2>
      </div>

    <!-- Content sectiong -->
    <div class="" style="width: 100%;">


<!-- start of track title listing-->
<div class="darkgray" ng-controller="nowCtrl">
  <div class="row">&nbsp;</div>
  <div class="row"><!--Sort by: <a href="" ng-click="predicate=''">Date</a>&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;<a href="" ng-click="predicate='score; reverse=false'">Popularity</a> --></div>
  <div ng-repeat="tweet in tweets | orderBy:'score'">
     <!--{{ tweet }} <br /> -->
  </div>
  <div class="row">&nbsp;</div>
  <div class="row">
    <div class="row">
      <div id="masonryContainer" class="js-masonry" data-masonry-options='{"columnWidth": ".large-3", "itemSelector": "div.now-tweet"}'>
        <div ng-repeat="tweet in tweets | orderBy:predicate" class="large-3 small-6 columns now-tweet" style="min-height: 172px;">
          <div class="panel official dabox adminlght" ng-show="tweet.tweettype == 'games'">
            <div class="row genre admin">
              <div class="large-12 columns tweets"> 
                <ul>
                  <li>
                    <p><strong>{{ predicate }}Top 5 Trending Games</strong></p>
                  </li>
                  <li ng-repeat="game in tweet.games">
                    {{ game.recent_rank }}&nbsp;&nbsp;&nbsp;-&nbsp;&nbsp;&nbsp;<a href="/details/{{ game._id }}" style="color: black;">{{ game.title }}</a>
                  </li>
                  <li><br /><a href="/list/main" style="color: gray; text-decoration:underline;">View complete trending games ranking</a></li>
                </ul>
              </div>
            </div>
          </div> 

          <div class="panel official dabox adminlght" style="overflow-y:scroll;overflow-x:hidden;" ng-show="tweet.tweettype == 'videos'">
            <div class="row genre admin">
              <div class="large-12 columns tweets"> 
                <ul>
                  <li>
                    <p><strong>Latest Trailers</strong></p>
                  </li>
                  <li ng-repeat="video in tweet.videos">
                    <a href="http://www.youtube.com/watch?v={{ video.videoId }}" target="_new" style="color: black;">-&nbsp;&nbsp;&nbsp;{{ video.title }}</a>
                  </li>
                  <li><br /></li>
                </ul>
              </div>
            </div>
          </div> 

          

          <div class="panel" ng-hide="tweet.tweettype == 'games'" style="padding-bottom:0;margin-bottom:0; padding-top:0;margin-top:0; height:5px;{{ rankTweet(tweet) }}">&nbsp;</div>
          <div class="row" ng-if="tweet.media_url">
            <div class="small-12 columns"><img src="{{ tweet.media_url }}"></div>
            </div>
          <div class="panel" ng-hide="tweet.tweettype == 'games'">
            <div class="row">
              <div class="large-12 columns tweets" linkify>{{ tweet.text }}</div>
            </div>
            <div class="row">
              <br />
              <hr />
            </div>
            <div class="row">

              <div class="large-12 columns author"><span style="text-transform:lowercase">By:</span> @{{ tweet.author }} <span class="" style="text-align:right;"><a href="http://twitter.com/{{ tweet.author }}/status/{{ tweet._id }}" target="_blank">{{ tweet.created_at|moment:'M/D/YYYY' }} AGO</a></span></div>

            </div>
            <div class="row">
              <div class="large-12 columns"><a href="https://twitter.com/intent/tweet?url=&via=weareplayingit&text={{ tweet.text }}" target="_blank"><i class="icon-twitter-bird icon-font"></i>
              </div>
            </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row" style="clear: all; margin-top: 20px; margin-bottom: 20px;"><div class="large-12 columns" style="position: relative; top: 50%; left: 50%; margin-top: -50px; margin-left: -100px;"><a ng-click="getMore()" class="button">Load More Tweets</a></div></div>
</div>
