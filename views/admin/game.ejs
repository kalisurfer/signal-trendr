		<!-- adding an event form -->
		            

		<form name="eventCreate" action="/forms/newGame" method="post">
		  <fieldset>
		    <legend>Adding a Game</legend>
		    <div class="large-4 columns">
			  <label for="games">Title: </label>
			  <input id="games" placeholder="Start typing the name of the game" style="width: 100%;" name="title" />
			</div>

			<div class="large-6 columns">
			  <label for="description">Description: </label>
			  <input id="description" placeholder="Start Typing the game description" style="width: 100%;" name="description" />
			</div>

			<div class="large-4 columns">
			  <label for="releaseDate">Release Date: </label>
			  <input id="releaseDate" placeholder="Format should be 2013-05-02T07:50:08.648Z" style="width: 100%;" name="releaseDate" />
			</div>

			<div class="large-4 columns">
			  <label for="genre">Genre: </label>
			  <input id="genre" placeholder="seperate genre by comas" style="width: 100%;" name="genre" />
			</div>

			<div class="large-4 columns">
			  <label for="platform">Platform: </label>
			  <input id="platform" placeholder="seperate platforms by comas" style="width: 100%;" name="platform" />
			</div>

			<div class="large-6 columns">
			  <label for="edTags">Editorial Tags: </label>
			  <input id="edTags" placeholder="Enter tags to search editorial by" style="width: 100%;" name="edTags" />
			</div>

			<div class="large-6 columns">
			  <label for="tags">Tags: </label>
			  <input id="tags" placeholder="enter tags to search twitter by" style="width: 100%;" name="tags" />
			</div>

			<div class="large-6 columns">
			  <label for="officialTwitter">twitter account: </label>
			  <input id="officialTwitter" placeholder="Enter official twitter account name" style="width: 100%;" name="officialTwitter" />
			</div>

			<div class="large-6 columns">
			  <label for="trailer">Trailer: </label>
			  <input id="trailer" placeholder="enter one youtube trailer" style="width: 100%;" name="trailer" />
			</div>

			<div class="large-4 columns">
			  <label for="publisher">Publisher: </label>
			  <input id="publisher" placeholder="Enter name of publisher" style="width: 100%;" name="publisher" />
			</div>

			<div class="large-4 columns">
			  <label for="developer">Developer: </label>
			  <input id="developer" placeholder="Enter name of developer" style="width: 100%;" name="developer" />
			</div>



			<div class="large-2 columns">
			  <button type="submit">Submit</button>
			</div>

		  </fieldset>
		</form>



